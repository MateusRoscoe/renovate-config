{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "group": {
    "groupName": "no-global-grouping",
    "packagePatterns": ["^$"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev-dependencies-minor-patch",
      "group": {
        "major": { "enabled": false },
        "minor": { "enabled": true },
        "patch": { "enabled": true }
      },
      "commitMessagePrefix": "chore(deps):",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDepTypes": ["dependencies"],
      "groupName": "prod-dependencies-minor-patch",
      "group": {
        "major": { "enabled": false },
        "minor": { "enabled": true },
        "patch": { "enabled": true }
      },
      "commitMessagePrefix": "fix(deps):"
    }
  ]
}
